[colors]
background = #121212
background-alt = #323232
accent = #ff0088
text = #f5f5f5
text-alt = #535353
underline = #323232
icon = #535353
alert = #ff0088


[bar/main]
monitor = ${env:MONITOR:DP-2}

font-0 = Iosevka:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=13;1

background = ${colors.background}
foreground = ${colors.text}
radius = 6.0
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2
line-size = 3
offset-y = 10
offset-x = 8%
width = 84%
height = 29
wm-restack = bspwm
modules-left = bspwm
modules-center = xwindow
modules-right = eth xkeyboard filesystem pulseaudio memory cpu temperature date powermenu
cursor-click = pointer
cursor-scroll = ns-resize
tray-position = right
tray-padding = 2
;override-redirect = true
;line-color = #f00
;border-size = 4
;border-color = #00000000


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
label-underline = ${colors.underline}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-prefix-underline = ${colors.underline}

label-layout = %layout%
label-layout-underline = ${colors.underline}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.background-alt}
label-indicator-underline = ${colors.underline}


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#ff0088}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.text-alt}
label-mounted-underline = ${colors.underline}


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.accent}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.text-alt}
label-empty-padding = 2


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-underline = ${colors.underline}
label = %percentage:2%%


[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-underline = ${colors.underline}
label = %percentage_used%%


[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected-underline = ${colors.underline}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.text-alt}
label-connected = %ifname% %downspeed%

format-disconnected = <label-disconnected>
format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.text-alt}
format-disconnected-underline = ${colors.alert}
label-disconnected = %ifname% disconnected

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.text-alt}
format-underline = ${colors.underline}

label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false
format-volume = <ramp-volume> <label-volume> <bar-volume>
format-volume-foreground = ${colors.icon}
format-volume-underline = ${colors.underline}
label-volume-foreground = ${colors.text}

label-muted =  muted
label-muted-foreground = ${colors.text-alt}
format-muted-underline = ${colors.underline}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol

bar-volume-width = 13
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = ${colors.accent}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.text-alt}


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.underline}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.text-alt}
; CPU - temperature path
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp2_input

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1
format-underline = ${colors.underline}

label-open = 
label-open-foreground = ${colors.accent}
label-close = cancel
label-close-foreground = ${colors.accent}
label-separator = |
label-separator-foreground = ${colors.text-alt}

menu-0-0 = reboot
menu-0-0-exec = #powermenu.open.1
menu-0-1 = power off
menu-0-1-exec = #powermenu.open.2
menu-0-2 = hibernate
menu-0-2-exec = #powermenu.open.3
menu-0-3 = suspend
menu-0-3-exec = #powermenu.open.4

;menu-1-0 = cancel
;menu-1-0-exec = #powermenu.open.0
menu-1-0 = reboot
menu-1-0-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
;menu-2-1 = cancel
;menu-2-1-exec = #powermenu.open.0

menu-3-0 = hibernate
menu-3-0-exec = systemctl hibernate
;menu-3-1 = cancel
;menu-3-1-exec = #powermenu.open.0

menu-4-0 = suspend
menu-4-0-exec = systemctl suspend


[module/mpd]
